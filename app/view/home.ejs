<% include partials/head.ejs %>
    <title>Home | Drinkerz</title>
</head>
<body>
    <section>
        <h1>Hi <%= user.firstName %>!</h1>

    </section>
    <section class="beers__container">
      <ul class="beers__list">
        <% for(let i = 0; i < user.beers.length; i++) { %>
          <li class="list__item">
            <% fetch('https://api.untappd.com/v4/beer/info/' + user.beers[i] + '?access_token=' + user.token).then(response => response.json()).then(function(data) { console.log('https://api.untappd.com/v4/beer/info/' + user.beers[i] + '?access_token=' + user.token);%>
              <h3 class="item__title"><%= data.response.beer.beer_name %></h3>
              <img class="item__image" src="<%- data.response.beer.beer_label_hd %>" alt="<%- data.response.beer.beer_name %>">
              <p class="item__description"><%= data.response.beer.beer_description %></p>
              <p class="item__brewery"><%= data.response.brewery.brewery_name %></p>
            <% }) %>
          </li>
        <% } %>
      </ul>
    </section>
    <% include partials/footer.ejs %>
</body>
</html>
