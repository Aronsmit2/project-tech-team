<% include partials/head.ejs %>
    <title>Matches - CycLove</title>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/"><img src="/static/media/images/cyclove-logo.svg" alt="Logo CycLove"></a></li>
                <li><a href="/log-out">Logout</a></li>
            </ul>
        </nav>
    </header>
    <h1>Your matches</h1>
    <main>
        <section class="card-grid">
                <!-- Here will be the matches shown based on the user -->
                <% for (let i = 0; i < users.length; i++) { %>
                <a href="/<%= users[i].id %>">
                    <article class="card">
                        <!-- Image of the user -->
                        <img src="<%= users[i].image %>" alt="Profile picture from <%= users[i].firstName %>" class="card__img">
                        <!-- Send a like to the array and saves it -->
                        <form action="/users" method="POST">
                            <button id="like" value="<%= users[i].id %>">Like <%= users[i].firstName %></button>
                        </form>
                        <!-- Name and city the person lives in -->
                        <section>
                            <h2><%= users[i].firstName + " " + users[i].lastName %></h2>
                            <p><%= users[i].city %></p>
                        </section>
                    </article>
                </a>
            <% } %>
        </section>
    </main>
    <% include partials/footer.ejs %>
</body>
</html>